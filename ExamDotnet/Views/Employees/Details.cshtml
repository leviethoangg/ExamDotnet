@model ExamDotnet.Models.Employee

@{
    ViewData["Title"] = "Details";
}

<style>
    h1 {
        color: #333;
    }

    h4 {
        color: #333;
    }

    .row {
        margin-top: 20px;
    }

    dl.row {
        margin-bottom: 20px;
    }

    dt, dd {
        padding: 10px;
        border-bottom: 1px solid #ccc;
    }

</style>

<h1>@Html.DisplayFor(model => model.EmployeeName) details</h1>

<div>
    <h4>Employee</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EmployeeName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EmployeeName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EmployeeCode)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EmployeeCode)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Rank)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Rank)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Department)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Department.DepartmentId)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.EmployeeId" class="btn btn-info">Edit</a> |
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
