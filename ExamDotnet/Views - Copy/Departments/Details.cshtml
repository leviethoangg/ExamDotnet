@model ExamDotnet.Models.Department

@{
    ViewData["Title"] = "Details";
}

<style>
    /* Thêm CSS cho trang Details tại đây */
    h1 {
        color: #333;
    }

    h4 {
        color: #333;
    }

    .row {
        margin-top: 20px;
    }

    dl.row {
        margin-bottom: 20px;
    }

    dt, dd {
        padding: 10px;
        border-bottom: 1px solid #ccc;
    }

    /* Thêm các quy tắc CSS khác theo ý muốn của bạn */
</style>

<h1>@Html.DisplayFor(model => model.DepartmentName) details</h1>

<div>
    <h4>Department</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DepartmentName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DepartmentName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DepartmentCode)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DepartmentCode)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Location)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Location)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.DepartmentId" class="btn btn-info">Edit</a> |
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
